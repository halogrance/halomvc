<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.springmvc.dao.StudentDAO">

<resultMap type="Opr"  id="resultListopr">
		<id column="OPR_ID" property="oprId"/>
		<result column="OPR_NAME" property="oprName"/>
		<result column="OWN_BRH_ID" property="ownBrhId"/>	
		
	</resultMap> 
	
	<select id="selectAll" parameterType="java.lang.String" resultMap="resultListopr">
	select * from TBL_OPR_INFO
	</select>
	<delete id="deleteStu" parameterType="int" >
	delete from student where id=#{id}
	</delete>
	<update id="updateStu" parameterType="User">
	update student set stuName=#{stuName},create_at=#{createAt} where stuName=#{stuName}
	</update>
	<insert id="insertStu" parameterType="Student" useGeneratedKeys="true" keyProperty="id">
		insert into student(stuNo,stuName) values(#{stuNo},#{stuName})
	</insert>
</mapper>